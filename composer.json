{
    "name": "pierrehenry/api-simple-menu",
    "description": "A simple RESTful API for a Udemy course",
    "homepage": "https://www.udemy.com/course/build-modern-php-api/",
    "autoload": {
        "psr-4": {
            "PH7\\ApiSimpleMenu\\": "src/"
        },
        "files": [
            "src/helpers/headers.inc.php",
            "src/helpers/misc.inc.php",
            "src/config/config.inc.php",
            "src/config/database.inc.php",
            "src/Route/routes.php"
        ]
    },
    "authors": [
        {
            "name": "Pierre-Henry Soria",
            "email": "hi@ph7.me"
        }
    ],

    "config": {
        "platform": {
            "php": "8.2.0"
        }
    },
    "require": {
        "php": ">=8.2.0",
        "firebase/php-jwt": "^6.4",
        "respect/validation": "^2.2",
        "ph-7/php-http-response-header": "^1.0.2",
        "ph-7/just-http-status-codes": "^1.1",
        "ramsey/uuid": "^4.7",
        "gabordemooij/redbean": "^5.7",
        "vlucas/phpdotenv": "^5.5",
        "filp/whoops": "^2.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "license": "MIT"
}
